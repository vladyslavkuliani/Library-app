<!DOCTYPE html>
<html>
  <head>
    <title>PublicLibraryApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
    <h3>
    <ul>
      <% if current_user %>
        <li><%=link_to "See your profile", user_path(current_user)%></li>
        <li><%=link_to "Log Out", logout_path%></li>
        <li><%=link_to "All library members", show_users_path%></li>
      <%else%>
        <li><%=link_to "Create account", new_user_path(current_user)%></li>
        <li><%=link_to "Log In", login_path(current_user)%></li>
      <%end%>
    </ul>
    </h3>
  </header>
    <%flash.each do |name, msg|%>
    <span style="color: red"><%=msg%></span>
      <%end%>
      <div class="container">
        <div class="row">
          <div class="col-md-6 col-md-offset-3">
            <%= yield %>
          </div>
        </div>
      </div>
  </body>
</html>
